	<div id="sceneList" class="item"></div>

	<div class="right menu">
		<div class="item">

			<div class="ui inverted buttons">
				<button class="ui icon button" onclick="prevText();">
					<i class="step backward icon"></i>
				</button>

				<button class="ui  icon button" onclick="nextText();">
					<i class="step forward icon"></i>
				</button>
			</div>

		</div>
		<div class="item">
			<div style="width: 1rem;"></div>

			<button id="blackout" class="ui black basic button" onclick="clearText();">
				Clear
			</button>

		</div>
	</div>
	<!-- menu -->
	<script src="/socket.io/socket.io.js"></script>
	<script src="/javascripts/admin.js"></script>
{% endblock %}
