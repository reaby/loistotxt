{% extends 'layout/layout.twig' %}

{% block body %}
<div class="ui primary top attached pointing menu" style="height: 40px !important;">
	<div class="item">
		<div class="ui icon input">
			<i class="ui file alternate icon"></i>
			<input id="filename" type="text" value="{{ song }}" placeholder="Filename" class="ui input" />
		</div>
	</div>
	<div class="item">
		<button class="ui small action button" onclick="redo();">
			<i class="ui icon undo"></i>
			Undo
		</button>
	</div>
	<div class="right menu">
		<div class="ui buttons">
			<button class="ui green icon button" onclick="save()">
				<i class="ui icon save"></i>
				Save</button>
			<button class="ui icon button" onclick="window.close();">
				<i class="ui icon cancel"></i>
				Cancel</button>
		</div>
	</div>
</div>


<div class="ui inverted segment">
	<h1> Song editor</h1>
	<div class="ui two column grid">
		<div class="column">
			<h3 style="margin-bottom: 0;">Artist</h3>
			<div class="ui inverted transparent input" style="border-bottom: 1px solid #444;" >
				<input id="artist" value="" placeholder="Artist name" />
			</div>
		</div>
		<div class="column">
			<h3 style="margin-bottom: 0;">Title</h3>
			<div class="ui inverted transparent input" style="border-bottom: 1px solid #444;">
				<input  id="title" value="" placeholder="Song title">
			</div>
		</div>
	</div>
	<br>
	<div>
		<div id="songeditor"></div>
	</div>
	<div class="ui center aligned basic segment">
		<button class="ui icon button" onclick="addVerse()">
			<i class="ui icon add"></i>Add Part</button>
	</div>

</div>
<script src="/socket.io/socket.io.js"></script>
<script>
	var socket = io.connect();
	var song = "{{ song }}";
</script>
<script src="/javascripts/sortable.umd.js"></script>
<script src="/javascripts/editor.js"></script>
{% endblock %}